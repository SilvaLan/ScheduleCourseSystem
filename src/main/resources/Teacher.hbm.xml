<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="courseschesystem.entity.Teacher" table="teacher" schema="manage_system">
        <id name="tid" column="tid"/>
        <property name="tname" column="tname"/>
        <property name="tsex" column="tsex"/>
        <property name="tbirth" column="tbirth"/>
        <property name="tIDnum" column="tIDnum"/>
        <property name="trace" column="trace"/>
        <property name="tindate" column="tindate"/>
        <property name="aid" column="aid"/>
        <property name="mail" column="mail"/>

    </class>
</hibernate-mapping>